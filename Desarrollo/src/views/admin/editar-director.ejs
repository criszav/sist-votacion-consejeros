        <h2>Editar Director</h2>
        <form id="formEditar" action="/inicioAdmin/administradores?_method=PUT" method="POST">
            <input type="text" value="<%=directorEdit.id%>" id="director" name="director" hidden>
            <div class="form-groupEdit">
                <label for="name">Nombre</label>
                <div class="inputBtn">
                    <input value="<%=directorEdit.nombre%>" type="text" id="nombre" name="nombre" required disabled>
                    <button class="btnHabilitar" type="button" onclick="habilitarCampo('nombre')"><svg
